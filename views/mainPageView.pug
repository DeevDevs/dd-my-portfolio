          button.learning__learn-more__btn.sec__btn
            svg.sec__btn--arrow
              use(href='/images/icons/all-icons.svg#icon-arrow-day')
            svg.sec__btn--circle
              use(href='/images/icons/all-icons.svg#icon-circle-day')
        p.sec__learn-more--phrase= pageData.linkBtnText
    #projects.sec__main.lazy-bg
      .sec__icon-container
        svg.sec__icon.projects__icon
          use(href='/images/icons/all-icons.svg#projects-icon-day')
      .projects__description.sec__description
        p.sec__description--title= pageData.linkProjectsTitle
        p.sec__description--text= pageData.linkProjectsText
      .sec__learn-more
        a.sec__btn-link(href='./projects.html')
          button.projects__learn-more__btn.sec__btn
            svg.sec__btn--arrow
              use(href='/images/icons/all-icons.svg#icon-arrow-day')
            svg.sec__btn--circle
              use(href='/images/icons/all-icons.svg#icon-circle-day')
        p.sec__learn-more--phrase= pageData.linkBtnText
    #experience.sec__main.lazy-bg
      .sec__icon-container
        //- <img class="sec__icon experience__icon" src="images/icons/experience-icon-day.svg">
        svg.sec__icon.experience__icon
          use(href='/images/icons/all-icons.svg#experience-icon-day')
      .experience__description.sec__description
        p.sec__description--title= pageData.linkExpTitle
        p.sec__description--text= pageData.linkExpText
      .sec__learn-more
        a.sec__btn-link(href='./experience.html')
          button.experience__learn-more__btn.sec__btn
            svg.sec__btn--arrow
              use(href='/images/icons/all-icons.svg#icon-arrow-day')
            svg.sec__btn--circle
